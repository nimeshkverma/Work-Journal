{
  "name": "Work Journal",
  "version": "0.0.1",
  "manifest_version": 2,
  "description" : "A chrome pluggin to log your Work",
  "icons": { 
    "16": "icons/logo.png", 
    "48": "icons/logo.png", 
    "128": "icons/logo.png" 
  },
  "omnibox": { "keyword" : "Assisted" },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/logo.png",
      "19": "icons/logo.png",
      "38": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    },
    "default_title": "Fill CIBIL forms to make life easy",
    "default_popup": "popup.html"
  },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
    ]

}